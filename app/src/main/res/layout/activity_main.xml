<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon"
        android:id="@+id/img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:text="My library"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/lib"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/allBooks"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_below="@+id/lib"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="See all Books"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/currentBooks"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_below="@+id/allBooks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Currently reading Books"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/readBooks"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_below="@+id/currentBooks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Already read Books"
        android:textAllCaps="false"
        android:textSize="20dp" />



    <Button
        android:id="@+id/fav"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_below="@+id/readBooks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="See Your Favourites"
        android:textAllCaps="false"
        android:textSize="20dp" />

</RelativeLayout>